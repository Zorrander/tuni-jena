@prefix ns:   <http://www.example.org/ns#> .
@prefix rdf:  <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl:  <http://www.w3.org/2002/07/owl#> .
@prefix xsd:  <http://www.w3.org/2001/XMLSchema#> .
@prefix cogrob: <https://onto-server-tuni.herokuapp.com/Panda#> .

@include <OWL> .

// React to handover commands
[handoverCmd: (?cmd rdf:type cogrob:CmdEvent), (?cmd cogrob:has_action 'give'),
                                                   (?cmd cogrob:has_target ?thing)
              -> (cogrob:graspEventInd a cogrob:GraspEvent),
                  (cogrob:graspEventInd cogrob:actsOn ?thing)]

// Create an event to reach for the object
[moveArm: (?grasp a cogrob:GraspEvent), (?grasp cogrob:actsOn ?thing),
                    noValue(?thing cogrob:isInReachOf ?actor), noValue(?grasp cogrob:isDone "true")
              -> (cogrob:moveArmInd a cogrob:ArmEvent), (cogrob:moveArmInd cogrob:actsOn ?thing)]

// Create an event to properly grasp the object
[moveGripper: (?grasp rdf:type cogrob:GraspEvent), (?grasp cogrob:actsOn ?thing),
                                                      (?thing cogrob:isInReachOf ?actor)
              -> (cogrob:moveGripperInd a cogrob:GripperEvent), (cogrob:moveGripperInd cogrob:actsOn ?thing)]
